{
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "class-methods-use-this": ["error", { "exceptMethods": [
            "componentDidMount",
            "componentDidUpdate",
            "componentWillMount",
            "componentWillReceiveProps",
            "componentWillUnmount",
            "componentWillUpdate",
            "render",
            "shouldComponentUpdate"
          ] }]
    }
}